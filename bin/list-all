#!/usr/bin/env bash

set -eo pipefail

sort_versions() {
  sed 'h; s/[+-]/./g; s/^\([[:digit:]]\.[[:digit:]]\)\([bR]\)/\1.0\2/; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; s/R/.r/; s/alpha/.alpha/; s/b/.b/; s/dev/.dev/; s/pre/.pre/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

versions=$(
  git ls-remote --tags https://github.com/php/php-src.git |
    grep 'php-' |
    awk '!/(\{.*\})/ {print $2}' |
    sed 's/refs\/tags\/php-//' |
    sort_versions |
    xargs
)

echo "$versions"
