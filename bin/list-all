#!/usr/bin/env bash

set -eo pipefail

sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

versions=$(
  git ls-remote --tags https://github.com/php/php-src.git |
    grep 'php-' |
    awk '!/({})/ {print $2}' |
    sed 's/refs\/tags\/php-//' |
    grep -E -v -i "rc|alpha|beta|dev|pre" |
    sort_versions |
    xargs
)

echo "$versions"
